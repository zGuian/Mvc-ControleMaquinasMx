@model WebMvcControleMaquinasMx.Models.Maquinas.CriarMaquinaViewModel

<form>
    <div class="mb-3">
        @Html.LabelFor(model => model.Inventario)
        @Html.EditorFor(model => model.Inventario, new { htmlAttributes = new { @class = "form-control" } })
        <div id="Nome" class="form-text">We'll never share your email with anyone else.</div>
    </div>
    <div class="mb-3">
        @Html.LabelFor(model => model.Hostname)
        @Html.EditorFor(model => model.Hostname, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="mb-3">
        @Html.LabelFor(model => model.Ondeso)
        <div>
            <label>
                @Html.RadioButtonFor(model => model.Ondeso, "true") Sim
            </label>
            <label>
                @Html.RadioButtonFor(model => model.Ondeso, "false") Não
            </label>
        </div>
    </div>
</form>